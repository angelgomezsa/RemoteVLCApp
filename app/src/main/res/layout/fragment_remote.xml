<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        style="@style/Widget.RemoteVLCApp.AppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:navigationIcon="@drawable/ic_menu"
            app:title="Remote" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/not_connected"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

            <TextView
                android:id="@+id/info2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:text="@string/select_add_media_center"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="16sp" />

        </LinearLayout>

        <GridLayout
            android:id="@+id/navigation_controls"
            android:layout_width="0dp"
            android:layout_height="280dp"
            android:columnCount="3"
            android:rowCount="3"
            app:layout_constraintBottom_toTopOf="@+id/bottom_controls"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1" />

            <ImageButton
                android:id="@+id/nav_up"
                style="@style/Widget.GridNavigationButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/navigate_up"
                android:src="@drawable/ic_navigation_up" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1" />

            <ImageButton
                android:id="@+id/nav_left"
                style="@style/Widget.GridNavigationButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/navigate_left"
                android:src="@drawable/ic_navigation_left" />

            <ImageButton
                android:id="@+id/nav_click"
                style="@style/Widget.GridNavigationButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_vertical"
                android:contentDescription="@string/navigate_activate"
                android:src="@drawable/ic_navigation_click"
                android:tint="@color/defaultButtonColor" />

            <ImageButton
                android:id="@+id/nav_right"
                style="@style/Widget.GridNavigationButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/navigate_right"
                android:src="@drawable/ic_navigation_right" />

            <ImageButton
                android:id="@+id/nav_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="?selectableItemBackground"
                android:contentDescription="@string/navigate_back"
                android:src="@drawable/ic_navigation_back"
                android:tint="@color/defaultButtonColor" />

            <ImageButton
                android:id="@+id/nav_down"
                style="@style/Widget.GridNavigationButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/navigate_down"
                android:src="@drawable/ic_navigation_down" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1" />

        </GridLayout>

        <LinearLayout
            android:id="@+id/bottom_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/bottom_controls"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageButton
                    android:id="@+id/audiotrack"
                    style="@style/Widget.RemoteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/audio_track"
                    android:src="@drawable/ic_audiotrack" />

                <ImageButton
                    android:id="@+id/subtitles"
                    style="@style/Widget.RemoteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/subtitle_track"
                    android:src="@drawable/ic_subtitles" />

                <ImageButton
                    android:id="@+id/stop"
                    style="@style/Widget.RemoteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/stop"
                    android:src="@drawable/ic_stop" />

                <com.example.android.remotevlcapp.widget.HighlightButton
                    android:id="@+id/fullscreen"
                    style="@style/Widget.RemoteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/fullscreen"
                    android:src="@drawable/ic_fullscreen" />

                <ImageButton
                    android:id="@+id/aspect_ratio"
                    style="@style/Widget.RemoteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/aspect_ratio"
                    android:src="@drawable/ic_aspect_ratio" />

            </LinearLayout>

            <com.example.android.remotevlcapp.widget.MediaSeekBar
                android:id="@+id/media_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/previous"
                    style="@style/Widget.ActionButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/previous"
                    android:src="@drawable/ic_skip_previous" />

                <ImageButton
                    android:id="@+id/rewind"
                    style="@style/Widget.ActionButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/rewind"
                    android:src="@drawable/ic_fast_rewind" />

                <com.example.android.remotevlcapp.widget.PlayPauseButton
                    android:id="@+id/play_pause"
                    style="@style/Widget.ActionButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/play_pause"
                    android:src="@drawable/avd_play_to_pause" />

                <ImageButton
                    android:id="@+id/fast_forward"
                    style="@style/Widget.ActionButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/fast_forward"
                    android:src="@drawable/ic_fast_forward" />

                <ImageButton
                    android:id="@+id/next"
                    style="@style/Widget.ActionButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/next"
                    android:src="@drawable/ic_skip_next" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/mute"
                    style="@style/Widget.ActionButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/mute"
                    android:src="@drawable/ic_volume_off" />

                <com.example.android.remotevlcapp.widget.VolumeSeekBar
                    android:id="@+id/volume_seek_bar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="vertical" />

                <com.example.android.remotevlcapp.widget.HighlightButton
                    android:id="@+id/random"
                    style="@style/Widget.ActionButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/random"
                    android:src="@drawable/ic_shuffle" />

                <com.example.android.remotevlcapp.widget.RepeatButton
                    android:id="@+id/repeat"
                    style="@style/Widget.ActionButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/repeat"
                    android:src="@drawable/ic_repeat" />

            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>